# Base Operations {{{
def_key ":"
  execute_command

def_key "@"
  show_server_info

# pretend playlist is the "main" screen, all other screen exit to this
def_key "q"
  show_playlist

# only quit when in playlist
def_key "q"
  require_screen "playlist"
  quit
# }}}

