# Player control {{{
def_key "left"
  seek_backward

def_key "right"
  seek_forward

def_key "h"
  require_screen "playlist"
  seek_backward

def_key "l"
  require_screen "playlist"
  seek_forward

def_key "s"
  stop

def_key "p"
  pause

def_key ">"
  next

def_key "<"
  previous

def_key "space"
  pause

def_key "ctrl-s"
  toggle_single

def_key "ctrl-z"
  toggle_random

def_key "ctrl-r"
  toggle_repeat

def_key "ctrl-c"
  toggle_consume

def_key "ctrl-x"
  toggle_crossfade

